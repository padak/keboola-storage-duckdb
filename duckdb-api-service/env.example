# DuckDB API Service Configuration
# Copy this to .env and adjust as needed

# API settings
DEBUG=true
API_TITLE=DuckDB Storage API
API_VERSION=0.1.0

# Server settings
HOST=0.0.0.0
PORT=8000

# Storage paths (inside container)
DATA_DIR=/data
DUCKDB_DIR=/data/duckdb
FILES_DIR=/data/files
SNAPSHOTS_DIR=/data/snapshots

# DuckDB settings
DUCKDB_THREADS=4
DUCKDB_MEMORY_LIMIT=4GB

# Timeouts (seconds)
OPERATION_TIMEOUT=240
CONNECTION_TIMEOUT=10
